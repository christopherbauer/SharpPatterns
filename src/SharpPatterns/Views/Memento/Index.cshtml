@model SharpPatterns.ViewModels.MementoViewModel

@{
    ViewBag.Title = "Memento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>City</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Customers.Length; i++)
        {
            <tr>
                <td>@Model.Customers[i].FirstName</td>
                <td>@Model.Customers[i].LastName</td>
                <td>@Model.Customers[i].Age</td>
                <td>@Model.Customers[i].City</td>
                <td>@Model.Customers[i].State</td>
            </tr>
        }
    </tbody>
</table>